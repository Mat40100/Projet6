<script type="text/javascript">
    $(document).ready(function () {
        var tricksNumber = {{ number }};
        $(function() {
            $('#loadMore').click(function() {
                $.ajax({
                    url : '{{ path('app_trick_loadmore') }}',
                    dataType : 'html',
                    type: 'GET',
                    data: {
                        tricksNumber: tricksNumber
                    },
                    beforeSend: function(){
                        $('#theDiv').prepend('<img id="theImg" src="{{ asset('uploads/img/grey.gif') }}" />');
                    },
                    success : function(code_html, statut){ // success est toujours en place, bien s√ªr !
                        $('#Tricks').html(code_html);
			$tricksNumber = {{ number + 5 }}
                    },
                    error : function(resultat, statut, erreur){
                        console.log(resultat);
                        console.log("Ajax error");
                    }
                });
            })
        });
    });
</script>

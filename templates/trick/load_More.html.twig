    {% if tricks == null %}
        <div class="col-12 row align-items-center justify-content-center">
            <div class="text-center">Pas de tricks publi√©s</div>
        </div>
    {% endif %}

    {% for trick in tricks %}
        <div class="col-10 col-sm-8 col-md-5 col-lg-3 col-xl-2 p-4 row mb-4 m-xl-1">
            <a href="{{ path('app_trick_view', {'trick':trick.id,'slug':trick.name|slugify}) }}" class="col-12 tricks row justify-content-center align-items-center p-0 rounded">
                <div class="col-12 img-trick m-0 p-0"
                     style=" background-image: url('{{ asset(trick.hasMainMedia) }}');
                             background-repeat: no-repeat;
                             background-size: cover;
                             ">
                </div>
                <div class="link-tricks align-self-end col-12 text-center align-items-center row p-0">
                    <div class="trick-name col-12 p-0">{{ trick.name }}</div>
                </div>
            </a>
        </div>
    {%  endfor %}

    {% include('trick/loadMoreButton.html.twig') %}

    {% block js %}
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
                crossorigin="anonymous"></script>
        {% include('trick/indexAjax.html.twig') %}
        <script type="text/javascript" src="{{ asset('build/indexJs.js') }}"></script>
    {% endblock %}
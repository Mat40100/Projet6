{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/account.css') }}" />
{% endblock %}

{% block body %}

    <section class="row col-9 justify-content-center align-items-center p-0 m-0 m0">
        <div class="col-12 row">
            {% if user.picture is not null %}
                <div class="col-12 text-center justify-content-center">
                    <img class="user-picture rounded-circle p-0" src="{{ asset(user.picture.url) }}" alt="{{ user.picture.alt }}">
                </div>
                <div class="col-12 text-center justify-content-center">
                    <a href="{{ path('app_user_delpicture') }}">Supprimer la photo</a>
                    <br>
                    <a href="{{ path('app_user_addpicture') }}">Modifier une photo</a>
                </div>
            {% else %}
                <div class="col-12 text-center justify-content-center">
                    <a href="{{ path('app_user_addpicture') }}">Ajouter une photo</a>
                </div>
            {% endif %}


            <div class="col-12 text-center">
                <b>Nom : </b> {{ user.firstName }}
            </div>
            <div class="col-12 text-center">
                <b>Pr√©nom : </b>{{ user.lastName }}
            </div>
            <div class="col-12 text-center">
                <b>Nom d'utilisateur : </b>{{ user.username }}
            </div>
        </div>
    </section>

{% endblock %}
